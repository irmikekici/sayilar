#include <stdio.h>
#include <stdlib.h>

int deger(int b){
	if(b>0){
		return 1;
	}
	else if(b<0){
		return 0;
	}
	else{
		return 2;
	}
}



int main(){
	int a;
	int sonuc;
	printf("Lutfen bir sayi giriniz\n");
	scanf("%d",&a);
	sonuc=deger(a);
	
	if(sonuc==1){
		printf("Sayi pozitif");
	}
	else if(sonuc==0){
		printf("Sayi negatif");
	}
	else{
		printf("Sayi 0 dir");
	}
	return 0;
}
